@model CRUD_2023_06.Models.MyFruits
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<form method="post" asp-action="DeleteConfirmed">
    <input asp-for="Id" hidden/>
    <div class="border p-3">
        <div class="border p-3">
            <div class="form-group row">
                <h2 class="text-info p-lg-3">Delete Fruits Data</h2>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-4">
                            <label>Fruits Name</label>

                        </div>
                        <div class="col-8">
                            <input asp-for="fruitname" disabled class="form-control" />

                        </div>

                    </div>
                    <br />
                    <div class="form-group row">
                        <div class="col-4">
                            <label>Quantity</label>

                        </div>
                        <div class="col-8">
                            <input asp-for="fruitquantity" disabled class="form-control" />

                        </div>

                    </div>
                    <br />
                    <div class="form-group row">
                        <div class="col-8 offset-4 row">
                            <div class="col">
                                <input type="submit" class="btn btn-danger w-100" value="Delete" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success w-100">Back</a>
                            </div>

                        </div>
                    </div>

                </div>

            </div>

        </div>

    </div>

</form>

